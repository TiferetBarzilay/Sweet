<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivRecipeRow"
        android:layout_width="118dp"
        android:layout_height="104dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cake" />

    <TextView
        android:id="@+id/tvNameRecipeRow"
        android:layout_width="201dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="שם המתכון"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivRecipeRow"
        app:layout_constraintEnd_toStartOf="@+id/ivRecipeRow"
        app:layout_constraintStart_toEndOf="@+id/btnAddToFavoritesRecipesPostFragment"
        app:layout_constraintTop_toTopOf="@+id/ivRecipeRow"
        app:layout_constraintVertical_bias="0.537" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddToFavoritesRecipesPostFragment"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="56dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        app:backgroundTint="@color/white"
        app:cornerRadius="360dp"
        app:icon="@drawable/add_to_favorites_button"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="32dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/tvNameRecipeRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNameRecipeRow" />

</androidx.constraintlayout.widget.ConstraintLayout>