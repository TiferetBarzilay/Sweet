<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalAreaFragment">


    <ImageView
        android:id="@+id/ivUserPhotoPersonalAreaFragment"
        android:layout_width="185dp"
        android:layout_height="181dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/profile_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnLogOutPersonalAreaFragment"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F2B0AF"
        android:text="התנתקות"
        app:strokeColor="@android:color/black"
        app:strokeWidth="2dp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddPostsPersonalAreaFragment" />

    <Button
        android:id="@+id/btnMyPostsPersonalAreaFragment"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F2B0AF"
        app:strokeColor="@android:color/black"
        app:strokeWidth="2dp"
        android:text="פוסטים שלי"
        android:textColor="@color/black"
        android:textColorLink="#673AB7"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserNamePersonalAreaFragment" />

    <Button
        android:id="@+id/btnAddPostsPersonalAreaFragment"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F2B0AF"
        android:text="העלאת פוסט"
        android:textColor="@color/black"
        app:strokeColor="@android:color/black"
        app:strokeWidth="2dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMyPostsPersonalAreaFragment" />

    <ImageButton

        android:id="@+id/btnEditDetailsPersonalAreaFragment"
        android:layout_width="61dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/edit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivUserPhotoPersonalAreaFragment"
        app:layout_constraintTop_toTopOf="@+id/ivUserPhotoPersonalAreaFragment" />

    <TextView
        android:id="@+id/tvUserNamePersonalAreaFragment"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="71dp"
        android:text="שם משתמש:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivUserPhotoPersonalAreaFragment" />


</androidx.constraintlayout.widget.ConstraintLayout>